@using ImpulsaDBA.Shared.DTOs
@using ImpulsaDBA.Shared.Requests
@using ImpulsaDBA.Client.Services
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject CalendarioService CalendarioService
@inject AsignaturaService AsignaturaService
@inject AuthenticationStateProvider AuthStateProvider

@if (Mostrar)
{
    <div class="modal-overlay" @onclick="CerrarModal">
        <div class="modal-container" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>@(modoSoloLectura ? "Ver" : (esModoEdicion ? "Editar" : "Crear")) Evaluaci√≥n</h3>
                <button class="btn-cerrar" @onclick="CerrarModal" title="Cerrar">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <div class="modal-body">
                <EditForm Model="actividad" OnValidSubmit="GuardarActividad">
                    <DataAnnotationsValidator />
                    
                    @if ((modoSoloLectura || esModoEdicion) && ActividadEditar != null && ActividadEditar.FechaCreacion.HasValue)
                    {
                        <div class="alert alert-info mb-3">
                            <i class="bi bi-calendar-plus"></i>
                            <strong>Fecha de creaci√≥n:</strong> @ActividadEditar.FechaCreacion.Value.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    }
                    
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault"
                               @bind="actividad.ActividadActiva" disabled="@modoSoloLectura">
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            @(actividad.ActividadActiva ? "Visible a los estudiantes" : "No visible a los estudiantes")
                        </label>
                    </div>

                    <div class="form-group mb-3">
                        <label for="titulo-actividad">T√≠tulo</label>
                        <input type="text" class="form-control" id="titulo-actividad"
                               @bind="actividad.Titulo" disabled="@modoSoloLectura" />
                        <ValidationMessage For="@(() => actividad.Titulo)" />
                    </div>

                    <div class="mb-3">
                        <label for="fecha-actividad" class="form-label">Fecha Calendario</label>
                        <div class="input-group">
                            <input type="datetime-local" id="fecha-actividad" class="form-control"
                                   @bind="actividad.FechaPublicacion" 
                                   min="@DateTime.Today.ToString("yyyy-MM-ddTHH:mm")"
                                   disabled="@modoSoloLectura" />
                            <span class="input-group-text">
                                <i class="bi bi-calendar"></i>
                            </span>
                        </div>
                        <ValidationMessage For="@(() => actividad.FechaPublicacion)" />
                        @if (!esModoEdicion && !modoSoloLectura && actividad.FechaPublicacion.HasValue && actividad.FechaPublicacion.Value.Date < DateTime.Today)
                        {
                            <small class="text-danger">La fecha no puede ser anterior a hoy.</small>
                        }
                    </div>

                    <div class="form-group mb-3">
                        <label for="instrucciones-actividad">Instrucciones adicionales:</label>
                        <textarea class="form-control" id="instrucciones-actividad" rows="5"
                                  @bind="actividad.Descripcion" 
                                  placeholder="Ingrese las instrucciones para la evaluaci√≥n..."
                                  disabled="@modoSoloLectura"></textarea>
                        <ValidationMessage For="@(() => actividad.Descripcion)" />
                    </div>

                    @if (!string.IsNullOrEmpty(MensajeProcesos))
                    {
                        <div class="alert alert-info">
                            @MensajeProcesos
                        </div>
                    }

                    <div class="modal-footer">
                        @if (modoSoloLectura)
                        {
                            @* Filtro por grupo: solo visualizaci√≥n, sin botones Cerrar ni Editar (se cierra con la X del header) *@
                        }
                        else
                        {
                            <button type="button" class="btn btn-danger" @onclick="CerrarModal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Guardar Actividad</button>
                        }
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

