@using ImpulsaDBA.Shared.DTOs
@using ImpulsaDBA.Shared.Requests
@using ImpulsaDBA.Client.Services
@using System.ComponentModel.DataAnnotations
@using Microsoft.JSInterop
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject CalendarioService CalendarioService
@inject AsignaturaService AsignaturaService
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthStateProvider

@if (Mostrar)
{
    <div class="modal-overlay" @onclick="CerrarModal">
        <div class="modal-container" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>@(modoSoloLectura ? "Ver" : (esModoEdicion ? "Editar" : "Incluir")) Videos de Enganche</h3>
                <button class="btn-cerrar" @onclick="CerrarModal" title="Cerrar">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <div class="modal-body">
                <EditForm Model="actividad" OnValidSubmit="GuardarActividad">
                    <DataAnnotationsValidator />
                    
                    @if (modoSoloLectura && ActividadEditar?.FechaCreacion.HasValue == true)
                    {
                        <div class="alert alert-info mb-3">
                            <i class="bi bi-calendar-plus"></i> 
                            <strong>Fecha de creaci√≥n:</strong> @ActividadEditar.FechaCreacion.Value.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    }
                    
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault"
                               @bind="actividad.ActividadActiva" disabled="@modoSoloLectura">
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            @(actividad.ActividadActiva ? "Visible a los estudiantes" : "No visible a los estudiantes")
                        </label>
                    </div>

                    <div class="form-group mb-3">
                        <label for="titulo-actividad">T√≠tulo</label>
                        <input type="text" class="form-control" id="titulo-actividad"
                               @bind="actividad.Titulo" disabled="@modoSoloLectura" />
                        <ValidationMessage For="@(() => actividad.Titulo)" />
                    </div>

                    <div class="mb-3">
                        <label for="fecha-actividad" class="form-label">Fecha Publicaci√≥n</label>
                        <input type="datetime-local" id="fecha-entrega" class="form-control"
                               @bind="actividad.FechaPublicacion" 
                               min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-ddTHH:mm")"
                               disabled="@modoSoloLectura" />
                        <ValidationMessage For="@(() => actividad.FechaPublicacion)" />
                        @if (!esModoEdicion && !modoSoloLectura && actividad.FechaPublicacion.HasValue && actividad.FechaPublicacion.Value.Date <= DateTime.Today)
                        {
                            <small class="text-danger">Solo se pueden crear actividades para d√≠as futuros (a partir de ma√±ana).</small>
                        }
                    </div>

                    <div class="form-group mb-3">
                        <label for="descripcion-actividad">Descripci√≥n</label>
                        <textarea class="form-control" id="descripcion-actividad" rows="3"
                                  @bind="actividad.Descripcion" disabled="@modoSoloLectura"></textarea>
                        <ValidationMessage For="@(() => actividad.Descripcion)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Videos</label>
                        <ul class="list-group" style="max-height: 40vh; overflow-y: auto;">
                            @foreach (var video in ListVideos.OrderBy(v => v.Orden))
                            {
                                <li class="list-group-item video-item">
                                    <div class="d-flex gap-2 align-items-start">
                                        @if (!string.IsNullOrEmpty(video.ThumbnailUrl))
                                        {
                                            <div class="video-thumbnail-container" 
                                                 @onclick="@(() => AbrirVideo(video.Url))"
                                                 title="Hacer clic para abrir el video">
                                                <img src="@(video.ThumbnailFallback ?? video.ThumbnailUrl)" 
                                                     alt="Miniatura del video" 
                                                     class="video-thumbnail"
                                                     @onerror="@(() => ManejarErrorThumbnail(video))" />
                                                <div class="video-play-overlay">
                                                    <i class="bi bi-play-circle-fill"></i>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="video-thumbnail-container video-thumbnail-placeholder">
                                                <i class="bi bi-camera-video"></i>
                                            </div>
                                        }
                                        <div class="flex-grow-1">
                                            <input type="url" 
                                                   class="form-control" 
                                                   placeholder="Ingrese el URL del video (YouTube, Vimeo, etc.)"
                                                   value="@video.Url"
                                                   disabled="@modoSoloLectura"
                                                   @onchange="@((ChangeEventArgs e) => ActualizarVideoUrl(video, e.Value?.ToString() ?? ""))" />
                                            @if (!string.IsNullOrEmpty(video.ThumbnailUrl))
                                            {
                                                <small class="text-muted d-block mt-1">
                                                    <i class="bi bi-check-circle text-success"></i> Video detectado
                                                </small>
                                            }
                                        </div>
                                        @if (!modoSoloLectura)
                                        {
                                            <button type="button" 
                                                    class="btn btn-danger btn-sm"
                                                    @onclick="() => EliminarVideo(video)"
                                                    title="Eliminar video">
                                                <i class="bi bi-x-square-fill"></i>
                                            </button>
                                        }
                                    </div>
                                </li>
                            }
                        </ul>
                        @if (!modoSoloLectura)
                        {
                            <button type="button" class="btn btn-success mt-2"
                                    @onclick="AgregarVideo">
                                <i class="bi bi-plus-square-fill"></i> Agregar Video
                            </button>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(MensajeProcesos))
                    {
                        <div class="alert alert-info">
                            @MensajeProcesos
                        </div>
                    }

                    <div class="modal-footer">
                        @if (modoSoloLectura)
                        {
                            <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cerrar</button>
                            <button type="button" class="btn btn-primary" @onclick="HabilitarEdicion">
                                <i class="bi bi-pencil"></i> Editar
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-danger" @onclick="CerrarModal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Guardar Actividad</button>
                        }
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

