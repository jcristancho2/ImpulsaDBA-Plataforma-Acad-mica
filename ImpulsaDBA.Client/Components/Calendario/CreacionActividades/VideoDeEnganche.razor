@code {
    [Parameter] public bool Mostrar { get; set; }
    [Parameter] public DateTime FechaSeleccionada { get; set; }
    [Parameter] public int IdAsignacionAcademica { get; set; }
    [Parameter] public ActividadCalendarioDto? ActividadEditar { get; set; }
    [Parameter] public bool ModoSoloLectura { get; set; } = false;
    [Parameter] public EventCallback OnCerrar { get; set; }
    [Parameter] public EventCallback OnActividadGuardada { get; set; }

    private CrearActividadRequest actividad = new();
    private List<VideoEnganche> ListVideos = new();
    private int NextId = 1;
    private string MensajeProcesos = "";
    private bool esModoEdicion => ActividadEditar != null;
    private bool modoSoloLectura = false;

    protected override async Task OnParametersSetAsync()
    {
        if (Mostrar)
        {
            modoSoloLectura = ModoSoloLectura;
            
            if (ActividadEditar != null)
            {
                // Modo edici√≥n: cargar datos completos de la actividad
                try
                {
                    var actividadCompleta = await CalendarioService.ObtenerActividadCompleta(ActividadEditar.Id);
                    
                    actividad = new CrearActividadRequest
                    {
                        Titulo = actividadCompleta.Titulo ?? ActividadEditar.Titulo ?? "",
                        Descripcion = actividadCompleta.Descripcion ?? "",
                        FechaPublicacion = actividadCompleta.FechaPublicacion ?? ActividadEditar.FechaInicio,
                        ActividadActiva = actividadCompleta.ActividadActiva
                    };
                    
                    // Cargar videos
                    if (actividadCompleta.Videos != null && actividadCompleta.Videos.Any())
                    {
                        ListVideos = actividadCompleta.Videos.Select((v, index) => new VideoEnganche
                        {
                            Id = index + 1,
                            Url = v.Url,
                            Orden = v.Orden
                        }).ToList();
                        NextId = ListVideos.Max(v => v.Id) + 1;
                    }
                    else
                    {
                        ListVideos = new();
                        NextId = 1;
                    }
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"Error al cargar actividad completa: {ex.Message}");
                    // Fallback a datos b√°sicos
                    actividad = new CrearActividadRequest
                    {
                        Titulo = ActividadEditar.Titulo ?? "",
                        FechaPublicacion = ActividadEditar.FechaInicio,
                        ActividadActiva = !ActividadEditar.Eliminado
                    };
                    ListVideos = new();
                    NextId = 1;
                }
            }
            else
            {
                // Modo creaci√≥n: valores por defecto
                actividad = new CrearActividadRequest
                {
                    FechaPublicacion = FechaSeleccionada,
                    ActividadActiva = true
                };
                ListVideos = new();
                NextId = 1;
            }
            MensajeProcesos = "";
        }
    }

    private void HabilitarEdicion()
    {
        modoSoloLectura = false;
        StateHasChanged();
    }

    private void AgregarVideo()
    {
        ListVideos.Add(new VideoEnganche
        {
            Id = NextId,
            Url = "",
            Orden = ListVideos.Count + 1,
        });
        NextId++;
    }

    private void EliminarVideo(VideoEnganche video)
    {
        ListVideos.Remove(video);
    }

    private void ActualizarVideoUrl(VideoEnganche video, string nuevaUrl)
    {
        video.Url = nuevaUrl;
        video.ThumbnailUrl = ObtenerThumbnailUrl(nuevaUrl);
        video.ThumbnailFallback = null; // Resetear fallback
        StateHasChanged();
    }

    private void ManejarErrorThumbnail(VideoEnganche video)
    {
        // Si falla maxresdefault, intentar con hqdefault para YouTube
        if (!string.IsNullOrEmpty(video.ThumbnailUrl) && 
            video.ThumbnailUrl.Contains("maxresdefault") && 
            string.IsNullOrEmpty(video.ThumbnailFallback))
        {
            video.ThumbnailFallback = video.ThumbnailUrl.Replace("maxresdefault", "hqdefault");
            video.ThumbnailUrl = video.ThumbnailFallback;
            StateHasChanged();
        }
    }

    private string? ObtenerThumbnailUrl(string url)
    {
        if (string.IsNullOrWhiteSpace(url))
            return null;

        try
        {
            // YouTube
            var youtubeId = ExtraerIdYouTube(url);
            if (!string.IsNullOrEmpty(youtubeId))
            {
                // Intentar con maxresdefault primero, si falla usar hqdefault
                return $"https://img.youtube.com/vi/{youtubeId}/maxresdefault.jpg";
            }

            // Vimeo
            var vimeoId = ExtraerIdVimeo(url);
            if (!string.IsNullOrEmpty(vimeoId))
            {
                // Vimeo requiere una llamada a su API o usar un servicio proxy
                // Por ahora, usamos un servicio p√∫blico que genera thumbnails de Vimeo
                return $"https://vumbnail.com/{vimeoId}.jpg";
            }

            // Para otros servicios, podr√≠amos intentar detectar si es un video
            // Por ahora retornamos null
            return null;
        }
        catch
        {
            return null;
        }
    }

    private string? ExtraerIdYouTube(string url)
    {
        if (string.IsNullOrWhiteSpace(url))
            return null;

        try
        {
            var uri = new Uri(url);
            
            // Diferentes formatos de URLs de YouTube:
            // https://www.youtube.com/watch?v=VIDEO_ID
            // https://youtu.be/VIDEO_ID
            // https://www.youtube.com/embed/VIDEO_ID
            // https://www.youtube.com/v/VIDEO_ID

            if (uri.Host.Contains("youtube.com"))
            {
                if (uri.AbsolutePath == "/watch")
                {
                    // Extraer el par√°metro v= de la query string
                    var query = uri.Query;
                    if (query.StartsWith("?"))
                        query = query.Substring(1);
                    
                    var parameters = query.Split('&');
                    foreach (var param in parameters)
                    {
                        var parts = param.Split('=');
                        if (parts.Length == 2 && parts[0] == "v")
                        {
                            return Uri.UnescapeDataString(parts[1]);
                        }
                    }
                }
                else if (uri.AbsolutePath.StartsWith("/embed/"))
                {
                    return uri.AbsolutePath.Replace("/embed/", "").Split('?')[0];
                }
                else if (uri.AbsolutePath.StartsWith("/v/"))
                {
                    return uri.AbsolutePath.Replace("/v/", "").Split('?')[0];
                }
            }
            else if (uri.Host.Contains("youtu.be"))
            {
                return uri.AbsolutePath.TrimStart('/').Split('?')[0];
            }

            return null;
        }
        catch
        {
            return null;
        }
    }

    private string? ExtraerIdVimeo(string url)
    {
        if (string.IsNullOrWhiteSpace(url))
            return null;

        try
        {
            var uri = new Uri(url);
            
            // Formatos de URLs de Vimeo:
            // https://vimeo.com/VIDEO_ID
            // https://vimeo.com/channels/CHANNEL/VIDEO_ID
            // https://player.vimeo.com/video/VIDEO_ID

            if (uri.Host.Contains("vimeo.com"))
            {
                var segments = uri.AbsolutePath.TrimStart('/').Split('/');
                
                // Si es /video/VIDEO_ID
                if (segments.Length > 0 && segments[0] == "video")
                {
                    return segments.Length > 1 ? segments[1] : null;
                }
                
                // Si es /VIDEO_ID directamente
                if (segments.Length > 0 && !segments[0].Contains("channels") && !segments[0].Contains("groups"))
                {
                    // El √∫ltimo segmento suele ser el ID
                    return segments[segments.Length - 1];
                }
            }

            return null;
        }
        catch
        {
            return null;
        }
    }

    private async Task GuardarActividad()
    {
        try
        {
            // Validar que tenemos un IdAsignacionAcademica v√°lido
            if (IdAsignacionAcademica <= 0)
            {
                MensajeProcesos = "Error: No se ha seleccionado una asignaci√≥n acad√©mica v√°lida";
                Console.WriteLine("‚ùå Error: IdAsignacionAcademica es inv√°lido o cero");
                return;
            }

            MensajeProcesos = esModoEdicion ? "Actualizando actividad..." : "Guardando actividad...";
            Console.WriteLine($"üíæ {(esModoEdicion ? "Actualizando" : "Guardando")} Video de Enganche - IdAsignacion: {IdAsignacionAcademica}");
            
            if (esModoEdicion && ActividadEditar != null)
            {
                // Obtener UsuarioId del usuario actual
                var authState = await AuthStateProvider.GetAuthenticationStateAsync();
                var usuarioIdClaim = authState?.User?.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                if (string.IsNullOrEmpty(usuarioIdClaim) || !int.TryParse(usuarioIdClaim, out int usuarioId))
                {
                    MensajeProcesos = "Error: No se pudo identificar al usuario actual";
                    return;
                }

                // Modo actualizaci√≥n
                var requestActualizar = new ActualizarActividadRequest
                {
                    Id = ActividadEditar.Id, // ID de tab.asignacion_academica_recurso
                    ActividadActiva = actividad.ActividadActiva,
                    FechaPublicacion = actividad.FechaPublicacion,
                    Titulo = actividad.Titulo,
                    Descripcion = actividad.Descripcion,
                    Videos = ListVideos
                        .Where(v => !string.IsNullOrEmpty(v.Url))
                        .Select(v => new VideoEngancheRequest
                        {
                            Url = v.Url,
                            Orden = v.Orden
                        })
                        .ToList(),
                    UsuarioId = usuarioId
                };
                
                Console.WriteLine($"üì§ Actualizando actividad con ID: {requestActualizar.Id}, UsuarioId: {usuarioId}");
                
                try
                {
                    var resultado = await CalendarioService.ActualizarActividad(requestActualizar);
                    
                    Console.WriteLine($"‚úÖ Video de Enganche actualizado exitosamente: {resultado}");
                    MensajeProcesos = "Actividad actualizada correctamente";
                }
                catch (UnauthorizedAccessException ex)
                {
                    Console.WriteLine($"‚ùå No autorizado: {ex.Message}");
                    MensajeProcesos = $"No autorizado: {ex.Message}";
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"‚ùå Error al actualizar: {ex.Message}");
                    MensajeProcesos = $"Error al actualizar: {ex.Message}";
                }
            }
            else
            {
                // Modo creaci√≥n
                // Obtener informaci√≥n del periodo actual
                var periodoInfo = await AsignaturaService.ObtenerPeriodoActual();
                int anioId = int.Parse(periodoInfo.Anio);
                int periodoId = int.Parse(periodoInfo.Periodo);
                
                // Construir el request
                var request = new CrearActividadCompletaRequest
                {
                    ActividadActiva = actividad.ActividadActiva,
                    FechaPublicacion = actividad.FechaPublicacion,
                    Titulo = actividad.Titulo,
                    Descripcion = actividad.Descripcion,
                    TipoActividadId = 1, // Video de Enganche
                    AsignacionAcademicaId = IdAsignacionAcademica,
                    PeriodoId = periodoId,
                    AnioId = anioId,
                    Videos = ListVideos
                        .Where(v => !string.IsNullOrEmpty(v.Url))
                        .Select(v => new VideoEngancheRequest
                        {
                            Url = v.Url,
                            Orden = v.Orden
                        })
                        .ToList()
                };
                
                await CalendarioService.CrearActividad(request);
                
                MensajeProcesos = "Actividad guardada correctamente";
            }
            
            await Task.Delay(1000);
            
            if (OnActividadGuardada.HasDelegate)
            {
                await OnActividadGuardada.InvokeAsync();
            }
            
            await CerrarModal();
        }
        catch (Exception ex)
        {
            MensajeProcesos = $"Error al guardar la actividad: {ex.Message}";
            Console.WriteLine($"Error al guardar actividad: {ex.Message}");
        }
    }

    private async Task CerrarModal()
    {
        if (OnCerrar.HasDelegate)
        {
            await OnCerrar.InvokeAsync();
        }
    }

    private async Task AbrirVideo(string url)
    {
        if (!string.IsNullOrEmpty(url))
        {
            await JSRuntime.InvokeVoidAsync("open", url, "_blank");
        }
    }

    private class VideoEnganche
    {
        public int Id { get; set; }
        public string Url { get; set; } = string.Empty;
        public int Orden { get; set; }
        public string? ThumbnailUrl { get; set; }
        public string? ThumbnailFallback { get; set; }
    }
}
