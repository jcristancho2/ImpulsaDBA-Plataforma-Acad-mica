    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (Mostrar && !string.IsNullOrEmpty(editorId) && !editorInitialized)
        {
            try
            {
                // Esperar un momento para que el DOM est√© completamente listo
                await Task.Delay(300);
                
                // Verificar que Quill est√© disponible globalmente
                var quillAvailable = await JSRuntime.InvokeAsync<bool>("eval", "typeof Quill !== 'undefined'");
                if (!quillAvailable)
                {
                    Console.WriteLine("QuillJS no est√° disponible. Aseg√∫rate de incluir el script en index.html");
                    return;
                }

                // Verificar si el elemento del editor existe en el DOM
                var elementExists = await JSRuntime.InvokeAsync<bool>("eval", 
                    $"document.getElementById('{editorId}') !== null");
                
                if (!elementExists)
                {
                    Console.WriteLine($"El elemento del editor con ID '{editorId}' no se encontr√≥ en el DOM. Reintentando...");
                    // Intentar de nuevo despu√©s de un delay adicional
                    await Task.Delay(300);
                    elementExists = await JSRuntime.InvokeAsync<bool>("eval", 
                        $"document.getElementById('{editorId}') !== null");
                    
                    if (!elementExists)
                    {
                        Console.WriteLine($"El elemento del editor con ID '{editorId}' a√∫n no est√° disponible despu√©s del segundo intento");
                        return;
                    }
                }

                // Verificar si ya existe una instancia de Quill para este editor
                var instanceExists = await JSRuntime.InvokeAsync<bool>("eval", 
                    $"window.quillInstances && window.quillInstances['{editorId}'] !== undefined");

                // Si ya existe una instancia, destruirla primero
                if (instanceExists)
                {
                    await JSRuntime.InvokeVoidAsync("eval", 
                        $"if (window.quillInstances && window.quillInstances['{editorId}']) {{ delete window.quillInstances['{editorId}']; }}");
                }

                // Inicializar Quill usando JSInterop
                if (dotNetRef == null)
                {
                    dotNetRef = DotNetObjectReference.Create(this);
                }
                
                await JSRuntime.InvokeVoidAsync("initQuillEditor", editorId, dotNetRef, contenidoEditor);
                editorInitialized = true;
                Console.WriteLine($"Editor Quill inicializado correctamente con ID: {editorId}");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error al inicializar Quill: {ex.Message}");
                Console.WriteLine($"StackTrace: {ex.StackTrace}");
            }
        }
    }

