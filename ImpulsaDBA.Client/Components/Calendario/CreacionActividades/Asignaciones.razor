    private async Task HandleSelectedFiles(InputFileChangeEventArgs e)
    {
        foreach (var file in e.GetMultipleFiles())
        {
            try
            {
                if (file.Size > 5 * 1024 * 1024)
                {
                    MensajeProcesos = $"El archivo {file.Name} excede el tama√±o m√°ximo permitido (5MB).";
                    continue;
                }

                var contentType = file.ContentType;
                if (contentType != "application/pdf" &&
                    contentType != "application/msword" &&
                    contentType != "application/vnd.openxmlformats-officedocument.wordprocessingml.document" &&
                    contentType != "application/vnd.ms-powerpoint" &&
                    contentType != "application/vnd.openxmlformats-officedocument.presentationml.presentation")
                {
                    MensajeProcesos = $"El archivo {file.Name} no tiene un formato v√°lido.";
                    continue;
                }

                const int bufferSize = 81920;
                using var stream = file.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024);
                using var memoryStream = new MemoryStream();
                byte[] buffer = new byte[bufferSize];
                int bytesRead;
                while ((bytesRead = await stream.ReadAsync(buffer, 0, bufferSize)) > 0)
                {
                    memoryStream.Write(buffer, 0, bytesRead);
                }

                byte[] fileData = memoryStream.ToArray();
                string ruta = GetFileRoute(contentType, file.Name);
                
                // En WebAssembly, los archivos se suben al servidor mediante API
                // Por ahora, guardamos la informaci√≥n del archivo para subirlo despu√©s
                // TODO: Implementar endpoint en API para subir archivos
                
                ListArchivos.Add(new ArchivoCargado
                {
                    Nombre = file.Name,
                    Tipo = GetFileType(contentType),
                    Ruta = ruta,
                    Datos = fileData // Guardar datos en memoria para subirlos despu√©s
                });
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error al procesar el archivo {file.Name}: {ex.Message}");
            }
        }
    }

    private string GetFileRoute(string contentType, string fileName)
    {
        string rutaBase = contentType switch
        {
            "application/pdf" => Path.Combine("Archivos", "PDFs"),
            _ when contentType.StartsWith("audio/") => Path.Combine("Archivos", "Audios"),
            _ when contentType.StartsWith("video/") => Path.Combine("Archivos", "Videos"),
            _ => "Archivos"
        };
        return Path.Combine(rutaBase, fileName);
    }

    private int GetFileType(string contentType)
    {
        if (contentType == "application/pdf") return 1;
        if (contentType.StartsWith("video/")) return 2;
        if (contentType.StartsWith("audio/")) return 3;
        return 4;
    }

