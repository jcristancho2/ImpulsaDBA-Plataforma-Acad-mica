@using ImpulsaDBA.Shared.Requests
@using ImpulsaDBA.Client.Services
@using System.ComponentModel.DataAnnotations
@inject AuthService AuthService
@inject CurrieTechnologies.Razor.SweetAlert2.SweetAlertService Swal

@if (Mostrar)
{
    <div class="modal-overlay" @onclick="CerrarModal">
        <div class="modal-container" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Recuperar Contraseña</h3>
                <button class="btn-cerrar" @onclick="CerrarModal" title="Cerrar">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <div class="modal-body">
                @if (!informacionValidada)
                {
                    <!-- Paso 1: Validar información del usuario -->
                    <EditForm Model="@validacionModel" OnValidSubmit="@ValidarInformacion">
                        <DataAnnotationsValidator />
                        
                        <p class="text-muted mb-3">
                            Ingrese su correo electrónico, número de celular y número de documento para verificar su identidad.
                        </p>

                        @if (!string.IsNullOrEmpty(mensajeError))
                        {
                            <div class="alert alert-danger" role="alert">
                                @mensajeError
                            </div>
                        }

                        <div class="form-group">
                            <label for="email">Correo Electrónico</label>
                            <InputText id="email" 
                                    type="email" 
                                    class="form-control" 
                                    @bind-Value="validacionModel.Email" 
                                    placeholder="correo@ejemplo.com" />
                            <ValidationMessage For="@(() => validacionModel.Email)" />
                        </div>

                        <div class="form-group">
                            <label for="celular">Número de Celular</label>
                            <InputText id="celular" 
                                    class="form-control" 
                                    @bind-Value="validacionModel.Celular" 
                                    placeholder="3001234567" />
                            <ValidationMessage For="@(() => validacionModel.Celular)" />
                        </div>

                        <div class="form-group">
                            <label for="nroDocumento">Número de Documento</label>
                            <InputText id="nroDocumento" 
                                    class="form-control" 
                                    @bind-Value="validacionModel.NroDocumento" 
                                    placeholder="1234567890" />
                            <ValidationMessage For="@(() => validacionModel.NroDocumento)" />
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CerrarModal">
                                Cancelar
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Validando...</span>
                                }
                                else
                                {
                                    <span>Validar Información</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                }
                else
                {
                    <!-- Paso 2: Cambiar contraseña -->
                    <EditForm Model="@cambioModel" OnValidSubmit="@CambiarContrasena">
                        <DataAnnotationsValidator />
                        
                        <p class="text-success mb-3">
                            <i class="bi bi-check-circle"></i> Información validada correctamente. Ahora puede establecer una nueva contraseña.
                        </p>

                        @if (!string.IsNullOrEmpty(mensajeError))
                        {
                            <div class="alert alert-danger" role="alert">
                                @mensajeError
                            </div>
                        }

                        <div class="form-group">
                            <label for="nuevaContrasena">Nueva Contraseña</label>
                            <InputText id="nuevaContrasena" 
                                    type="password" 
                                    class="form-control" 
                                    @bind-Value="cambioModel.NuevaContrasena" 
                                    placeholder="Mínimo 6 caracteres" />
                            <ValidationMessage For="@(() => cambioModel.NuevaContrasena)" />
                        </div>

                        <div class="form-group">
                            <label for="confirmarContrasena">Confirmar Contraseña</label>
                            <InputText id="confirmarContrasena" 
                                    type="password" 
                                    class="form-control" 
                                    @bind-Value="cambioModel.ConfirmarContrasena" 
                                    placeholder="Repita la contraseña" />
                            <ValidationMessage For="@(() => cambioModel.ConfirmarContrasena)" />
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="VolverAValidacion">
                                Volver
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Cambiando...</span>
                                }
                                else
                                {
                                    <span>Cambiar Contraseña</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Mostrar { get; set; }
    [Parameter] public EventCallback OnCerrar { get; set; }

    private ValidarInformacionRecuperacionRequest validacionModel = new();
    private CambiarContrasenaRequest cambioModel = new();
    private bool informacionValidada = false;
    private bool isLoading = false;
    private string? mensajeError = null;

    private async Task ValidarInformacion()
    {
        mensajeError = null;
        isLoading = true;

        try
        {
            var esValido = await AuthService.ValidarInformacionRecuperacion(validacionModel);
            
            if (esValido)
            {
                informacionValidada = true;
                // Copiar los datos de validación al modelo de cambio
                cambioModel.Email = validacionModel.Email;
                cambioModel.Celular = validacionModel.Celular;
                cambioModel.NroDocumento = validacionModel.NroDocumento;
            }
            else
            {
                mensajeError = "La información proporcionada no coincide con ningún usuario. Verifique los datos e intente nuevamente.";
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al validar información: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CambiarContrasena()
    {
        mensajeError = null;
        isLoading = true;

        try
        {
            var resultado = await AuthService.CambiarContrasena(cambioModel);
            
            if (resultado)
            {
                await Swal.FireAsync(new CurrieTechnologies.Razor.SweetAlert2.SweetAlertOptions
                {
                    Icon = CurrieTechnologies.Razor.SweetAlert2.SweetAlertIcon.Success,
                    Title = "¡Contraseña cambiada!",
                    Text = "Su contraseña ha sido cambiada exitosamente. Ahora puede iniciar sesión con su nueva contraseña.",
                    ConfirmButtonText = "Aceptar",
                    ConfirmButtonColor = "#006bb7"
                });

                await CerrarModal();
            }
            else
            {
                mensajeError = "No se pudo cambiar la contraseña. Verifique que la información sea correcta e intente nuevamente.";
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al cambiar contraseña: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void VolverAValidacion()
    {
        informacionValidada = false;
        mensajeError = null;
        cambioModel = new CambiarContrasenaRequest();
    }

    private async Task CerrarModal()
    {
        informacionValidada = false;
        mensajeError = null;
        validacionModel = new ValidarInformacionRecuperacionRequest();
        cambioModel = new CambiarContrasenaRequest();
        
        if (OnCerrar.HasDelegate)
        {
            await OnCerrar.InvokeAsync();
        }
    }
}

<style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
    }

    .modal-container {
        background: white;
        border-radius: 8px;
        width: 90%;
        max-width: 500px;
        max-height: 90vh;
        overflow-y: auto;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        border-bottom: 1px solid #e0e0e0;
    }

    .modal-header h3 {
        margin: 0;
        font-size: 1.5rem;
        color: #333;
    }

    .btn-cerrar {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: #666;
        padding: 0;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 4px;
        transition: background-color 0.2s;
    }

    .btn-cerrar:hover {
        background-color: #f0f0f0;
    }

    .modal-body {
        padding: 1.5rem;
    }

    .modal-footer {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        margin-top: 1.5rem;
        padding-top: 1rem;
        border-top: 1px solid #e0e0e0;
    }

    .form-group {
        margin-bottom: 1.25rem;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 1rem;
        transition: border-color 0.2s;
    }

    .form-control:focus {
        outline: none;
        border-color: #006bb7;
        box-shadow: 0 0 0 3px rgba(0, 107, 183, 0.1);
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .btn-primary {
        background-color: #006bb7;
        color: white;
    }

    .btn-primary:hover:not(:disabled) {
        background-color: #005a9e;
    }

    .btn-primary:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .alert {
        padding: 0.75rem 1rem;
        border-radius: 4px;
        margin-bottom: 1rem;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .text-success {
        color: #28a745;
    }

    .text-muted {
        color: #6c757d;
    }

    .spinner-border {
        display: inline-block;
        width: 1rem;
        height: 1rem;
        vertical-align: text-bottom;
        border: 0.125em solid currentColor;
        border-right-color: transparent;
        border-radius: 50%;
        animation: spinner-border 0.75s linear infinite;
    }

    @@keyframes spinner-border {
        to {
            transform: rotate(360deg);
        }
    }
</style>
