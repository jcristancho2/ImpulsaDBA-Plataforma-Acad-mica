@page "/dashboard/inicio"
@layout DashboardLayout
@using Microsoft.AspNetCore.Components.Authorization
@using ImpulsaDBA.Components.Shared
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<PageTitle>Inicio - ImpulsaDBA</PageTitle>

<div class="inicio-page">
    <div class="page-header">
        <div class="page-header-left">
            <div class="welcome-section">
                <h1>Bienvenido</h1>
                <p class="subtitle">Plataforma Académica ImpulsaDBA</p>
            </div>
        </div>
        <div class="page-header-right">
            <Ayudas />
        </div>
    </div>

    <div class="quick-actions">
        <a href="/dashboard/asignaturas" class="action-card">
            <i class="bi bi-book-fill"></i>
            <h3>Mis Asignaturas</h3>
            <p>Gestiona tus asignaturas asignadas</p>
        </a>
        <a href="/dashboard/calendario" class="action-card">
            <i class="bi bi-calendar3"></i>
            <h3>Calendario</h3>
            <p>Consulta el calendario académico</p>
        </a>
    </div>
</div>

<style>
    .inicio-page {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 3rem;
        gap: 1rem;
    }

    .page-header-left {
        flex: 1;
    }

    .page-header-right {
        display: flex;
        align-items: center;
    }

    .welcome-section {
        text-align: center;
    }

    .welcome-section h1 {
        font-size: 2.5rem;
        font-weight: 600;
        color: var(--color-text-primary);
        margin-bottom: 0.5rem;
    }

    .subtitle {
        font-size: 1.2rem;
        color: var(--color-text-secondary);
    }

    .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    .action-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        background-color: var(--color-bg-primary);
        border-radius: var(--border-radius-lg);
        box-shadow: 0 2px 8px var(--color-shadow);
        text-decoration: none;
        color: var(--color-text-primary);
        transition: transform var(--transition-fast), box-shadow var(--transition-fast);
    }

    .action-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 4px 12px var(--color-shadow);
    }

    .action-card i {
        font-size: 3rem;
        color: var(--color-primary);
        margin-bottom: 1rem;
    }

    .action-card h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .action-card p {
        color: var(--color-text-secondary);
        text-align: center;
    }

    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            align-items: stretch;
        }

        .page-header-right {
            align-self: flex-end;
            margin-top: 1rem;
        }
    }
</style>
